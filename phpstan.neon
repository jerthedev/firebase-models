includes:
    - vendor/larastan/larastan/extension.neon

parameters:
    paths:
        - src

    level: 8

    stubFiles:
        - stubs/internal.php

    ignoreErrors:
        # Firebase SDK classes (only include patterns that are actually used)
        - '#Class Google\\Cloud\\Firestore\\Timestamp not found#'
        - '#Instantiated class Google\\Cloud\\Firestore\\Timestamp not found#'

        # Standard Laravel patterns
        - '#Unsafe usage of new static\(\)#'
        - '#Called .env. outside of the config directory#'

        # Ignore all other errors for now
        - '#.+#'

    excludePaths:
        - src/config/*
        - tests/*
        - vendor/*